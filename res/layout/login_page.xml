<?xml version="1.0" encoding="utf-8"?>


<AbsoluteLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_overlay"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"></include>

    <EditText
        android:id="@+id/Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="48dp"
        android:layout_y="283dp"
        android:ems="10"
        android:inputType="text"
        android:hint="username"
        android:textColor="@color/black"
        android:textSize="12pt"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="140dp"
        android:layout_height="113dp"
        android:layout_x="131dp"
        android:layout_y="129dp"
        android:src="@mipmap/lockimage" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="47dp"
        android:layout_y="450dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="password"

        android:textColor="@color/black"
        android:textSize="@dimen/passwordsize"

        android:textStyle="italic" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="49dp"
        android:layout_y="366dp"
        android:ems="10"
        android:textColor="@color/black"
        android:textSize="12pt"
        android:textStyle="italic"
        android:hint="email"
        android:inputType="textEmailAddress" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="178dp"
        android:visibility="invisible"
        android:layout_y="530dp" />

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_x="102dp"
        android:layout_y="584dp"
        android:text="@string/Login"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="394dp"
        android:layout_height="37dp"
        android:layout_x="9dp"
        android:layout_y="691dp"
        android:text="@string/lastdext" />


</AbsoluteLayout>