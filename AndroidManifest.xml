<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/chatapp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Projectapp"
        tools:targetApi="31">
        <activity
            android:name=".viewtaskactivity"
            android:exported="false" />
        <activity
            android:name=".addtask"
            android:exported="false" />
        <activity
            android:name=".Userscreen"
            android:exported="false"
            android:label="@string/tile_spalsh" />
        <activity
            android:name=".Signup_User"
            android:exported="false"
            android:label="@string/tile_spalsh" />
        <activity
            android:name=".login_user"
            android:exported="false"
            android:label="@string/tile_spalsh" />
        <activity
            android:name=".SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:label="@string/tile_spalsh"
            android:theme="@style/Theme.Projectapp.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".homepage"
            android:exported="true"
            android:label="@string/tile_spalsh" />
    </application>

</manifest>